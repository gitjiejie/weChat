.part1 {
  background-color: #ffffff;
}


.item {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  height: 100rpx;
  position: relative;
}

.item:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #D9D9D9;
  color: #D9D9D9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.item_label {
  word-break: break-all;
  color:#333333;
  margin-left: 20rpx;
}
.item_desc {
  flex-grow: 1000;
  color:#999999;
  text-align: right;
}

.item_arrow {
  height: 50rpx;
  width: 50rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.item_arrow image {
  height: 50rpx;
  width: 50rpx;
}

.time_picker {
  width: 100%;
  height: 50rpx;
}


.part2 {
  display: flex;
  padding-top: 40rpx;
  background-color: #ffffff;
  font-size: 34rpx;
}

.desc_label {
  margin-left: 20rpx;
  width: 100rpx;
  color:#333333;
}

.desc_edit {
  flex-grow: 1000;
}




.warner4 {
  background-color: #ffffff;
  padding: 20rpx;
}

.checkuser_title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
}

.checkuser_title text {
  font-size: 24rpx;
  color:#a1a1a1;
}

.checkuser_thumb {
  display: flex;
}

.checkuser_thumb image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20rpx;
  border-radius: 50%;
}

.checkuser_thumb view {
  text-align: center;
  color:#bdbdbd;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.checkuser_userbox {
  margin-right: 20rpx;
}




.check_user {
  margin-top: 50rpx;
}
.user_item {
  display: flex;
  align-items:center;
  justify-content:space-between;
  padding: 0 20rpx;
  margin-bottom: 42rpx;
}

.user_header{
  height: 86rpx;
  width: 86rpx;
}

.user_header .user_thumb{
  height: 86rpx;
  width: 86rpx;
}
.user_desc {
  height: 88rpx;
  position: relative;
  display: flex;
  align-items: center;
  border-radius: 6rpx 0 0rpx 6rpx;
  background-color: #ffffff;
  flex-grow:1000;
  margin-left: 41rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
}

.user_desc .user_icon {
  height: 30rpx;
  width: 30rpx;
}

.user_desc .user_title{
  margin:0  30rpx 0 10rpx;
  color:#333333;
}

.user_desc .user_arrow{
  display:block;
  width:0;
  height:0;
  border-width:20rpx 20rpx 20rpx 0;
  border-style:solid;
  border-color:transparent #ffffff transparent transparent;/*透明 黄 透明 透明 */
  position:absolute;
  top:50%;
  left:-18rpx;
  margin-top: -20rpx;
}

.user_date {
  height: 88rpx;
  background-color: #ffffff;
  border-radius: 0 6rpx 6rpx 0;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  padding-right: 20rpx;
  color:#999999;
  word-break: keep-all;
  text-align: right;
}

.user_status,.user_title {
  word-break: keep-all;
}

.active {
  display: flex;
  position: fixed;
  bottom:0;
  width: 100%;
  background-color: #ffffff;
}

.active view{
  width: 100%;
  text-align: center;
  color:#ff5255;
  height: 100rpx;
  line-height: 100rpx;

}
.active .active_item_current {
  background-color: #F25E4C;
  color:#ffffff;
}