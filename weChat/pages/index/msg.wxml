<!--index.wxml-->
<view class="weui-msg">
  <view class="weui-msg__icon-area"><view class="{{icon}} weui-icon_msg"></view></view>
  <view class="weui-msg__text-area">
    <view class="weui-msg__title">{{msg}}</view>
    <!--<view class="weui-msg__desc">内容详情，可根据实际需要安排，如果换行则不超过规定长度，居中展现<view href="javascript:void(0);">文字链接</view></view>-->
  </view>
  <view class="weui-msg__opr-area">
    <view class="weui-btn-area">
      <view bindtap="bindGoBack" class="weui-btn weui-btn_default">返回</view>
    </view>
  </view>
</view>